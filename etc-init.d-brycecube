#!/bin/sh
# brycecube.com sinatra server

case "$1" in
'start')
        # Startup sinatra

        SINPATH=/home/ec2-user/workouttracker.com
        SINRB=index.rb

		cd $SINPATH
		sudo nohup ruby -rubygems $SINRB >> /var/log/workouttracker.log 2>&1 &
        ;;
'stop')
        sudo killall -TERM ruby
        ;;
*)
        echo "Usage: $0 { start | stop }"
        ;;
esac
exit 0
